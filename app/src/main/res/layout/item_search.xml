<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="itemDetail"
            type="com.netnovelreader.search.SearchBean" />

        <variable
            name="clickEvent"
            type="com.netnovelreader.search.SearchActivity.SearchItemClickEvent" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickEvent::onClick}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{itemDetail.bookname??``}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/latestChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{itemDetail.latestChapter??``}"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/resultUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{itemDetail.url??``}"
            android:textSize="12sp" />
    </LinearLayout>

</layout>
