<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemDetail"
            type="com.netnovelreader.shelf.ShelfBean" />

        <variable
            name="clickEvent"
            type="com.netnovelreader.shelf.ShelfActivity.ShelfClickEvent" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{clickEvent::itemOnClick}"
            android:onLongClick="@{clickEvent::itemOnLongClick}">

            <com.netnovelreader.shelf.BookCoverImage
                android:id="@+id/bookCover"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@{itemDetail.bitmap}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="start"
                android:text="@{itemDetail.bookname??``}"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bookCover"
                app:layout_constraintTop_toTopOf="@+id/bookCover"
                tools:text="小说名称" />

            <TextView
                android:id="@+id/latestChapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@{itemDetail.latestChapter??``}"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/bookCover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/nameView"
                tools:text="最新章节  458" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@id/nameView"
                app:layout_constraintRight_toRightOf="@id/nameView"
                android:text="@{itemDetail.isUpdate??``}"
                android:textColor="@color/red"
                android:textSize="20sp"
                tools:text="*"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</layout>
